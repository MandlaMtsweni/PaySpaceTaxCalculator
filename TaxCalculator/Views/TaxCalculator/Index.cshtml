@model TaxCalculator.Models.TaxCalculatorViewModel

<h4>Tax Calculator</h4>

<div class="row">
    <div class="col-md-10">
        <form asp-controller="TaxCalculator" asp-action="Index">
            @*<label>Enter Annual Salary</label><br />
            <input type="text" name="AnnualSalary"><br />
