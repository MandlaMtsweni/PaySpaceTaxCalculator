            <div class="form-group">
                <label asp-for="Calculation.Salary" class="control-label">Enter Annual Salary</label><br />
                <input asp-for="Calculation.Salary" />
                <span asp-validation-for="Calculation.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calculation.PostalCode" class="control-label">Postal Code</label><br />
                <input asp-for="Calculation.PostalCode" />
                <span asp-validation-for="Calculation.PostalCode" class="text-danger"></span>
            </div>

            <br />
            <table class="table table-striped">
                <thead>
                    <tr>

                        <th> Postal Code</th>
                        <th> Salary</th>
                        <th>Tax Amount Owed</th>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var item in Model.calculations)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalOwedIncomeTax)
                        </td>
                    </tr>
                    }
